@section scripts{
    <script type="text/javascript">
        var slideIndex = 0;
        $(function () {
            SlideShow(1);
        });

        var SlideShow = function (index) {
            if (index > 4) {
                index = 1;
                window.location.replace("/navajoshow/Show/Index");
                return;
            }
            $('#Slide_' + index).show();
            $('#dot' + index).addClass('active');
            setTimeout(function () {
                $('#Slide_' + index).hide();
                $('#dot' + index).removeClass('active');
                SlideShow(index + 1)
            }, 12000); // Change image every 8 seconds
        };
    </script>
}