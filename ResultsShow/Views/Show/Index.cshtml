<style>
    .mySlides {
        display: none;
    }

    /* Slideshow container */
    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }

    /* Caption text */
    .show-text {
        color: #f2f2f2;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* The dots/bullets/indicators */
    .dot {
        height: 13px;
        width: 13px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .active {
        background-color: #717171;
    }

    /* Fading animation */
    .show-fade {
        -webkit-animation-name: fade;
        /*-webkit-animation-delay: 5s;*/
        -webkit-animation-duration: 4s;
        animation-name: fade;
        /*animation-delay: 5s;*/
        animation-duration: 4s;
    }

    @@-webkit-keyframes fade {
        from {
            opacity: 0.05;
        }

        to {
            opacity: 1.05;
        }
    }

    @@keyframes fade {
        from {
            opacity: 0.05;
        }

        to {
            opacity: 1;
        }
    }

    /* On smaller screens, decrease text size */
    @@media only screen and (max-width: 300px) {
        .text {
            font-size: 11px;
        }
    }
</style>

